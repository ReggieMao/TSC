<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">
        
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/nav_back_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_pwd"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="208dp"
        android:layout_height="117dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/login_logo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="38dp"/>

    <LinearLayout
        android:id="@+id/ll_mobile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_round_edit_gray">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:src="@mipmap/login_user_normal"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@null"
            android:hint="@string/hint_mobile"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:cursorVisible="false"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/textGray"/>

        <RelativeLayout
            android:id="@+id/img_close"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/login_delete"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_round_edit_gray">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:src="@mipmap/login_code_normal"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@null"
            android:hint="@string/hint_code"
            android:singleLine="true"
            android:maxLength="4"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/textGray"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_round_text_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_round_edit_gray">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:src="@mipmap/login_password_normal"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@null"
            android:hint="@string/hint_pwd1"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/textGray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pwd1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_round_edit_gray">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:src="@mipmap/login_password_normal"/>

        <EditText
            android:id="@+id/et_pwd1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@null"
            android:hint="@string/hint_pwd2"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/textGray"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/bg_round_text_gray"
        android:elevation="2dp"
        android:text="@string/confirm"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"/>

</LinearLayout>